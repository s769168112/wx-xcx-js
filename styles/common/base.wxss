/* 公用的样式类 */
/* 溢出隐藏 */
.text-cut {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

/* 单行溢出 */
.text-cut-one {
    white-space: nowrap;
}

/* // 两行溢出 */
.text-cut-two {
    -webkit-line-clamp: 2;
}

.text-center {
    text-align: center;
}

/* // 弹性盒子  */
.flex {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
}

.fl {
    display: flex;
}

.fl-glow {
    flex-grow: 1;
}

/* // 水平居中 */
.fl-center {
    justify-content: center;
    align-items: center;
}

.fl-verticality {
    align-items: center;
}

/* //纵轴排列 */
.fl-col {
    flex-direction: column;
    flex-wrap: nowrap;
}

.fl-sp-bet {
    justify-content: space-between;
}

.fl-sp-around {
    justify-content: space-around;
}

.fl-sp-end {
    justify-content: flex-end;
}

