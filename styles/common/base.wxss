/* // 伪类清浮动 */
.clearfloat:after {
    display: block;
    clear: both;
    content: "";
    visibility: hidden;
    height: 0;
}

.clearfloat {
    zoom: 1;
}

.block {
    display: block;
}

.block-inline {
    display: inline-block;
}

