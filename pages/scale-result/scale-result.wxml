<!--pages/scale-result/scale-result.wxml-->
<view>
  <!-- 总分/平均分 -->
  <view class="paddingB36" wx:if="{{pageRes.ratingType == 1}}">
    <view class="marginLR26 paddingB36">量表得分</view>
    <view class="fl fl-center">
      <text style="font-size:120rpx;color:#2C6B13">{{pageRes.score}}</text>
    </view>
  </view>
  <!-- 因子 -->
  <view class="paddingB36" wx:elif="{{pageRes.ratingType == 2}}">
    <view class="marginLR26 paddingB36">量表得分</view>
    <view class="fl fl-wrap result-tip view-shadow-3379ff-2 marginLR26 border-radius-10 paddingLR20 paddingTB12">
      <view class="reason-tip" wx:for="{{pageRes.factor}}" wx:key="index">
        <text>{{item.title}}：{{item.score}}</text>
      </view>
    </view>
  </view>
  <!-- 评语 -->
  <view class="paddingB36">
    <view class="marginLR26 paddingB36">结果评语</view>
    <view class="result-tip view-shadow-3379ff-2 marginLR26 border-radius-10 paddingLR20 paddingTB12">
        <image src="../../assets/image/comment.png" style="display:inline-block;height:40rpx;transform:translateY(8rpx);width:40rpx;margin-right:12rpx"></image>
      <text class="result-tip-text">{{pageRes.comment}}</text>
      <text wx:if="{{!loading && !pageRes.comment}}">测试结果异常，如果给您造成不便，我们万分抱歉</text>
    </view>
  </view>
  <view class="paddingB36">
    <view class="paddingB36 marginLR26">健康小贴士</view>
    <view class="result-tip view-shadow-3379ff-2 marginLR26 border-radius-10 paddingLR20 paddingTB12">
      <text class="result-tip-text">{{pageRes.tips}}</text>
      <text wx:if="{{!loading && !pageRes.tips}}">无法根据结果给予相应的建议，如果给您造成不便，我们万分抱歉。</text>
    </view>
  </view>

  <!-- 视频推荐 -->
  <view class="paddingB50" wx:if="{{pageRes.relationSurgeryList.length}}">
    <view class="paddingB36 marginLR26">视频推荐</view>
    <view class="marginLR26 fl fl-wrap fl-sp-bet">
      <view wx:for="{{pageRes.relationSurgeryList}}" class="view-shadow-3379ff-2 border-bbb-1-019 marginB10 border-radius-5 overflow-hidden"  bindtap="toVideoDetail" data-item="{{item}}" style="width:305rpx" wx:key="index">
        <view style="height:206rpx; background-image:url({{item.cover}})" class="width100 fl fl-col fl-sp-bet">
          <view class="fl-grow fl fl-center">
            <image src="../../assets/image/video-play.png" style="height:32rpx;width:32rpx"></image>
          </view>
          <view class="color-white fl fl-sp-bet bg-color-101010 paddingLR6">
            <!-- <view class="fl fl-vertical"><text class="icon iconplay-icon marginR5"></text></view> -->
            <text class="font-10"></text>
            <text class="font-10" >{{item.videoDuration}}</text>
          </view>
        </view>
        <view class="paddingLR6 paddingTB8 font-13 text-cut text-cut-one">
          {{item.title}}
        </view>
      </view>
    </view>
  </view>
  <!-- 悬浮标题 -->
  <view class="fl fl-sp-bet box-sizing" style="width:100%;padding:0 52rpx;position: fixed;bottom:50rpx;z-index:10">
    <view bindtap="toMoreScale" class="view-shadow-3379ff-2 font-bold border-radius-5 text-center" style="width:305rpx;height:88rpx;line-height:88rpx; background-color:#fff;color:#55DBAC">更多测试</view>
    <view class="view-shadow-3379ff-2 font-bold border-radius-5 text-center" style="width:305rpx;height:88rpx;line-height:88rpx; background-color:#fff;color:#4A8BFE">分享</view>
  </view>
</view>