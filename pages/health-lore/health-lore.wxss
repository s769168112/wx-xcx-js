/* pages/health-lore/health-lore.wxss */
.tabs-line {
  height: 8rpx;
  width: 0;
  background-color: rgba(52, 169, 189, 100);
  text-align: center;
  transition: width 0.3s;
}
.tabs-transition {
  width: 36rpx;
}
.color-black {
  color: black;
  transition:color 0.3s
}
.color-transition {
  color: #43ABC8;
}

.scroll-view {
  height:calc(100vh - 228rpx)
}

/* pages/disease/disease.wxss */
.search-center {
  top: 50%;
  transform: translateY(-50%);
}
.search-icon {
  opacity: 1;
  transition: opacity 0.3s;
}
.search-icon-animation {
  opacity: 0;
}
.search-input {
  left: 40rpx;
  transition: left 0.3s;
}
.search-input-animation {
  left: 0rpx;
}
.search-res-list {
  max-height: 0;
  transition: max-height 0.5s;
}
.max-search-res-list {
  max-height: 400rpx;
}