<!-- 健康二级标签 -->
<view>
  <view class="marginLR26 marginB19 marginT10">
    <!-- 搜索框 -->
    <view class="fl fl-sp-bet marginB23">
      <view
        class="{{[isFocus?'border-bbb border-radius-10 view-shadow':'border-transparent bg-color-BBBBBB color-101010 border-radius-10','fl-grow position-relative']}}">
        <view
          class="{{['marginLR32 fl fl-vertical position-relative',(searchResList.length && isFocus)?'border-bottom-bbb-1':'']}}"
          style="height:72rpx">
          <i
            class="{{['icon iconsearch color-101010 marginR8 position-absolute search-icon search-center',isFocus?'search-icon-animation':'']}}"></i>
          <input type="text" value="{{searchText}}" placeholder="搜疾病或症状"
            class="{{['font-14 width100 height100 search-input position-absolute search-center',isFocus?'search-input-animation':'']}}"
            bindblur="inputBlur" bindfocus="inputFocus" bindinput="inputChange" />
        </view>
        <!-- 下拉框 -->
        <view wx:if="searchResList.length != 0"
          class="{{['marginLR32 search-res-list overflow-hidden',isFocus?'max-search-res-list':'']}}">
          <view wx:for="{{searchResList}}" wx:key="index" bindtap="toHealthDetail" data-item="{{item}}">
            <view class="{{['font-14 marginB8',index == 0?'marginT10':'']}}">
              <rich-text nodes="{{item.title}}"></rich-text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- tabs标签 -->
  <view class="fl marginLR26 marginB15 border-bottom-bbb-042">
    <view class="fl fl-col fl-vertical marginR17 " wx:for="{{tabs}}" wx:key="index" bindtap="selectedTab"
      data-index="{{index}}" data-tab="{{item}}">
      <view class="{{['marginB8 color-black',item.isSelected?'color-transition':'']}}">
        {{item.name}}
      </view>
      <view class="{{['tabs-line',item.isSelected?'tabs-transition':'']}}"></view>
    </view>
  </view>

  <!-- 列表 -->
  <scroll-view class="scroll-view" scroll-y bindscrolltolower="scrollBtm">
    <view class="marginLR26 paddingT15">
      <view class="view-shadow-3379ff-2 border-radius-10 fl fl-sp-bet marginB8 paddingLR20 paddingTB12"
        wx:for="{{loreList}}" wx:key="index" bindtap="toHealthDetail" data-item="{{item}}">
        <view class="fl fl-col fl-sp-bet paddingTB3">
          <text class="font-14">{{item.title}}</text>
          <view class="fl fl-vertical">
            <cover-image src="{{item.sysCreateUser.avatar}}" class="border-radius-100 marginR5" style="width:40rpx;height:40rpx">
            </cover-image>
            <text class="font-12 color-101010">{{item.sysCreateUser.nickname}}</text>
          </view>
        </view>
        <view>
          <cover-image src="{{item.cover}}" class="border-radius-10" style="width:140rpx;height:140rpx"></cover-image>
        </view>
      </view>
    </view>
  </scroll-view>
  <!--  -->
</view>