<view>
  <!-- 列表 -->
  <view class="fl paddingTB12 fl fl-center paddingLR17  border-radius-5" wx:if="{{!userArticleList.length}}">
      <cover-image src="../../assets/image/like-empty.png" style="height:300rpx;width:300rpx"></cover-image>
    </view>
  <view wx:else>
    <scroll-view class="scroll-view marginT20" scroll-y bindscrolltolower="scrollBtm" >
    <view class="marginLR26 paddingT15">
      <view class="view-shadow-3379ff-2 border-radius-10 fl fl-sp-bet marginB8 paddingLR20 paddingTB12 position-relative"
        wx:for="{{userArticleList}}" wx:key="index" bindtap="toArticleDetail" data-item="{{item}}" data-index="{{index}}">
        <view class="fl fl-col fl-sp-bet paddingTB3">
          <text class="font-14">{{item.title}}</text>
          <view class="fl fl-vertical">
            <cover-image src="{{item.sysCreateUser.avatar}}" class="border-radius-100 marginR5"
              style="width:40rpx;height:40rpx">
            </cover-image>
            <text class="font-12 color-101010">{{item.sysCreateUser.nickname}}</text>
          </view>
        </view>
        <view>
          <cover-image src="{{item.cover}}" class="border-radius-10" style="width:140rpx;height:140rpx"></cover-image>
        </view>
        <!-- 删除的图标 -->
        <image wx:if="{{status == 1}}" src="{{item.is_selected?'../../assets/image/selected.png':'../../assets/image/no-checkbox.png'}}" class="position-absolute" style="width:30rpx;height:30rpx;top:6rpx;right:6rpx"></image>
      </view>
    </view>
  </scroll-view>

  <view wx:if="{{status == 0}}" bindtap="openDetele" class=""
    style="position:fixed;bottom:100rpx;right:36rpx;width:120rpx;height:120rpx">
    <image src="../../assets/image/bg-laji.png" style="width:120rpx;height:120rpx"></image>
  </view>
  <view wx:else class="fl fl-sp-bet fl-vertical" style="position:fixed;height:120rpx;bottom:68rpx;padding:;width:100%">
    <view class="fl-grow fl fl-center" bindtap="selectedAll" style="flex-basis:50%;height:100%">
      <image src="../../assets/image/checkbox.png" class="marginR20" style="height:40rpx;width:40rpx"></image>
      全选
    </view>
    <view class="fl-grow fl fl-center" bindtap="deleted" style="flex-basis:50%;height:100%">
      <image src="{{selectedList.length?'../../assets/image/delete.png':'../../assets/image/back.png'}}" class="marginR20" style="height:40rpx;width:40rpx"></image>
      {{selectedList.length?'删除':'返回'}}
    </view>
  </view>
  </view>
</view>