.scale-item {
  min-height: 94rpx;
}
.scale-title {
  font-size: 28rpx;
  font-weight: bold;
}
.scale-time {
  font-size: 24rpx;
  color: rgba(16, 16, 16, 0.54);
}
.scale-icon {
  background-image:url(data:image/png;base64,);
  background-size: cover;
  background-repeat: no-repeat;
  width:100rpx;
  height:100rpx;
}
.show-more-scale {
  height:0;
  transition: height 0.4s;
}

.color-gray {
  color: rgba(16, 16, 16, 0.81);
}

.color-opac-gary {
  color: rgba(16, 16, 16, 0.54);
}

.iconarrow-right1 {
  transform: rotate(0);
  transition: transform 0.4s ;
}

.transiton-arrow {
  transform: rotate(270deg);
}